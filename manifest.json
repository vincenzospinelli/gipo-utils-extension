{
  "manifest_version": 3,
  "name": "GipoUtils",
  "version": "1.0",
  "description": "GipoTimer & GipoWheel of Names",
  "permissions": ["scripting", "storage"],
  "options_ui": {
    "page": "config/options.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["assets/styles/styles.css"]
    }
  ],
  "icons": {
    "48": "assets/images/icon.png"
  }
}
