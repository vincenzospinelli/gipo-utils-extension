{
  "manifest_version": 3,
  "name": "GipoUtils",
  "version": "1.0",
  "description": "GipoTimer & GipoWheel of Names",
  "permissions": ["storage", "activeTab", "scripting"],
  "options_ui": {
    "page": "config/config.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "service-worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["dist/output.css", "assets/styles/styles.css"]
    }
  ],
  "icons": {
    "48": "assets/images/icon.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["dist/output.css"],
      "matches": ["<all_urls>"]
    },
    {
      "resources": ["assets/sounds/beep.mp3"],
      "matches": ["<all_urls>"]
    }
  ]
}
